<p id="notice"><%= notice %></p>

<h1>Listing Matters</h1>

<table>
  <thead>
    <tr>
      <th>Name or type</th>
      <th>Location</th>
      <th>Acquired date</th>
      <th>Value</th>
      <th>Loaned to</th>
      <th>Loaned date</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Upc barcode</th>
      <th>Title</th>
      <th>Released date</th>
      <th>Format</th>
      <th>Artist or band</th>
      <th>Track list</th>
      <th>Amateur</th>
      <th>Lineage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.name_or_type %></td>
        <td><%= matter.location %></td>
        <td><%= matter.acquired_date %></td>
        <td><%= matter.value %></td>
        <td><%= matter.loaned_to %></td>
        <td><%= matter.loaned_date %></td>
        <td><%= matter.description %></td>
        <td><%= matter.notes %></td>
        <td><%= matter.upc_barcode %></td>
        <td><%= matter.title %></td>
        <td><%= matter.released_date %></td>
        <td><%= matter.format %></td>
        <td><%= matter.artist_or_band %></td>
        <td><%= matter.track_list %></td>
        <td><%= matter.amateur %></td>
        <td><%= matter.lineage %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

